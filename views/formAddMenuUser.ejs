<html lang="en">

<head>
    <%- include('partials/header.ejs')  %>
    <title>Buat Pesanan</title>
</head>

<body>
    <div class="container">
        <%- include('partials/navbar.ejs') %>
        <section class="section">
            <div class="columns">
                <div class="column is-4">
                    <div class="section">

                        <div class="card">
                            <div class="card-image">
                                <figure class="image is-4by3">
                                    <img src="<%= menu.img_url %>" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-content">
                                        <p class="title is-4"><%= menu.name %></p>
                                        <p class="subtitle is-6"><%= formatRupiah(menu.price) %></p>
                                    </div>
                                </div>
                                <div class="content">
                                    <%= menu.description %>
                                    <hr>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="column">
                    <div class="section">
                        <h1 class="title">Buat Pesanan</h1>
                        <form action="/menuusers/add/<%= menu.id %>" method="POST">
                            <label for="">Date:</label><br><br>
                            <input type="date" name="delivery_date"><br>
                            <br>
                            <input class="button is-danger is-small" type="submit" value="Tambah Pesanan">
                        </form>
                    </div>
                </div>
        </section>
</body>

</html>