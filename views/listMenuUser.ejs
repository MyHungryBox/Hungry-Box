<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/header.ejs')  %>
  <title>List Pesanan</title>
</head>

<body>
  <div class="container">
    <%- include('partials/navbar.ejs') %>
    <section class="section">
      <h2 class="subtitle">Daftar Pesanan Anda</h2>
      <table class="table is-striped is-bordered">
        <tr>
          <th>#</th>
          <th>Menu Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Menu Type</th>
          <th>Delivery Date</th>
          <th>Action</th>
        </tr>

        <% result.forEach(el => { %>
        <tr>
          <td><%= el.id %></td>
          <td><%= el.Menu.name %></td>
          <td><%= el.Menu.description %></td>
          <td><%= el.Menu.price %></td>
          <td><%= el.Menu.menu_type %></td>
          <td><%= el.delivery_date.toLocaleDateString() %></td>
          <td>
            <% if(!el.status) { %>
            <a href="/menuusers/pay/<%= el.id %>">Bayar</a> |
            <a href="/menuusers/delete/<%= el.id %>">Hapus</a>
            <% } else { %> Sudah Dibayar <% }%>
          </td>
        </tr>
        <% }); %>
      </table>
    </section>
</body>

</html>