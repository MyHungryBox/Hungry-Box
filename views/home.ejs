<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/header.ejs')  %>
  <title>HomePage</title>
</head>

<body>
  <div class="container">
    <%- include('partials/navbar.ejs') %>
    <section class="section">
      <h1 class="title">Selamat Datang di HungryBox<%=  name ? ', ' + name + '.' : '.' %> </h1>
      <h2 class="subtitle">Daftar Menu</h2>
      <table class="table is-striped is-bordered">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Menu Type</th>
          <th>Image</th>
          <th>Action</th>
        </tr>

        <% menus.forEach(menu => { %>
        <tr>
          <td><%= menu.id %></td>
          <td><%= menu.name %></td>
          <td><%= menu.description %></td>
          <td><%= menu.price %></td>
          <td><%= menu.menu_type %></td>
          <td>
            <img src="<%= menu.img_url  %> " width="100" height="100" alt="" />
          </td>
          <td>
            <a href="/menuusers/add/<%= menu.id %>">Pesan</a>
          </td>
        </tr>
        <% }); %>
      </table>
    </section>
  </div>
</body>

</html>