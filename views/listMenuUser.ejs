<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css"
    />

    <title>Pesanan Anda</title>
  </head>

  <body>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/menuusers">Daftar Pesanan</a></li>
        <li><a href="/menus">Daftar Menu</a></li>
      </ul>
    </nav>
    <section class="section">
      <h2 class="subtitle">Daftar Pesanan Anda</h2>
      <table class="table is-striped is-bordered">
        <tr>
          <th>#</th>
          <th>Menu Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Menu Type</th>
          <th>Delivery Date</th>
          <th>Action</th>
        </tr>

        <% result.forEach(el => { %>
        <tr>
          <td><%= el.id %></td>
          <td><%= el.Menu.name %></td>
          <td><%= el.Menu.description %></td>
          <td><%= el.Menu.price %></td>
          <td><%= el.Menu.menu_type %></td>
          <td><%= el.delivery_date.toLocaleDateString() %></td>
          <td>
            <% if(!el.status) { %>
            <a href="/menuusers/pay/<%= el.id %>">Bayar</a> |
            <a href="/menuusers/delete/<%= el.id %>">Hapus</a>
            <% } else { %> Sudah Dibayar <% }%>
          </td>
        </tr>
        <% }); %>
      </table>
    </section>
  </body>
</html>
